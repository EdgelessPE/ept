{
  "name": "ept-docs",
  "version": "1.0.0",
  "license": "MPL-2.0",
  "scripts": {
    "doc:dev": "rspress dev",
    "doc:build": "pnpm doc:gen && rspress build",
    "doc:preview": "rspress preview",
    "doc:gen": "ts-node ./scripts/index.ts",
    "lint": "eslint --fix scripts/**/* bindings/**/*",
    "prepare": "npx simple-git-hooks && rustup component add clippy",
    "rust:build":"cmd /c vc_ltl_scripts\\build.bat",
    "rust:lint":"cargo fmt && cargo clippy --fix --allow-dirty --allow-staged",
    "rust:ut": "cargo test -- --test-threads 1",
    "rust:ut:html": "cargo tarpaulin -o html --exclude-files test/** --exclude-files node_modules/** && start tarpaulin-report.html",
    "rust:ut:xml": "cargo tarpaulin -o xml --exclude-files test/** --exclude-files node_modules/**"
  },
  "dependencies": {
    "react": "^18.3.1",
    "rspress": "^1.28.3",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@modern-js/tsconfig": "2.58.3",
    "@rspress/plugin-shiki": "^1.28.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.1",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "eslint": "^8.57.0",
    "eslint-config-love": "^63.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.1",
    "ts-node": "^10.9.2",
    "ts-results": "^3.3.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
